<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg_detail_writing"
    android:gravity="center"
    android:layout_gravity="center_vertical"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        >
        <Button
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="btn"
            android:id="@+id/button_marker_create_complete"

            android:layout_marginRight="30sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_gravity="center"
            android:layout_width="225dp"
            android:layout_height="400dp"
            android:id="@+id/imageview_marker_create"
            android:src="@drawable/btn_write_camera"
            android:background="@drawable/boarderline_detail_camera"
            android:adjustViewBounds="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/text_write_title"
            android:gravity="center_vertical"
            android:clickable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textarea_write_title"
            android:gravity="center_vertical"
            android:id="@+id/textview_marker_create_title"
            />
    </LinearLayout>




</LinearLayout>